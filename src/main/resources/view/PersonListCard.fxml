<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<HBox id="cardPane" fx:id="cardPane" alignment="TOP_LEFT" spacing="18" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10" prefWidth="260" maxWidth="260"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" prefWidth="260" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" wrapText="true" maxWidth="260"/>
            </HBox>
            <FlowPane fx:id="tags" prefWrapLength="260" hgap="8" vgap="6"/>
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" maxWidth="260"/>
            <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" maxWidth="260"/>
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" maxWidth="260"/>
            <Label fx:id="note" styleClass="cell_small_label" text="\$note" wrapText="true" maxWidth="260"/>
        </VBox>
    </GridPane>
    <VBox fx:id="relationshipSection" alignment="TOP_LEFT" spacing="6" prefWidth="220">
        <padding>
            <Insets top="10" right="15" bottom="10" left="0"/>
        </padding>
        <Label fx:id="relationshipHeading" styleClass="cell_small_label, relationship_label" text="Relationships"/>
        <FlowPane fx:id="relationshipItems" hgap="12" vgap="12" prefWrapLength="220"/>
        <Label fx:id="relationshipEmptyText" styleClass="cell_small_label, muted_label"
               text="No relationships recorded"/>
    </VBox>
</HBox>
